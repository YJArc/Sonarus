<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/track_item_right_swipe"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp">
        <ImageView
            android:id="@+id/add_queue_icn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_queue"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:tint="@color/SecondaryBase"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/track_item_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/PrimaryBase">

        <ImageView android:id="@+id/entity_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:id="@+id/entity_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="bottom"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/selected_item"
                />

            <TextView android:id="@+id/entity_subtitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="top"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textDim"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
