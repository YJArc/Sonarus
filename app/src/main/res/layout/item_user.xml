<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/user_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="2dp"

    card_view:cardBackgroundColor="@color/SecondaryDark"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/user_pic"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            card_view:civ_border_color="@color/textFocus"
            card_view:civ_border_width="1dp"/>

        <Button
            android:id="@+id/profile_follow_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_unfollow"
            android:backgroundTint="@color/textFocus" />

        <TextView android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/user_pic"
            android:layout_centerVertical="true"
            android:paddingLeft="4dp"

            android:text="Username"
            android:textColor="@color/textFocus"

            android:textSize="16sp"
            android:shadowColor="@color/SecondaryDark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>