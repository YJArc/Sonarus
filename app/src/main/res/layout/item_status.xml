<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/status_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"

    card_view:cardBackgroundColor="@color/SecondaryDark"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/status_user_pic"
            android:layout_width="42dp"
            android:layout_height="42dp"

            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            card_view:civ_border_color="@color/textFocus"
            card_view:civ_border_width="1dp"/>

        <TextView android:id="@+id/status_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/status_user_pic"
            android:layout_marginRight="8dp"

            android:text="1/1/1970"
            android:textColor="@color/textDim"
            android:textSize="14sp"
            android:shadowColor="@color/SecondaryDark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <TextView android:id="@+id/status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@id/status_user_pic"
            android:layout_toRightOf="@id/status_user_pic"
            android:layout_toLeftOf="@id/status_timestamp"


            android:text="Username"
            android:textColor="@color/textFocus"
            android:textStyle="bold"
            android:textSize="16sp"
            android:shadowColor="@color/SecondaryDark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <TextView android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_toRightOf="@id/status_user_pic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_below="@id/status_name"


            android:text="Status"
            android:textColor="@color/textFocus"
            android:textSize="14sp"
            android:shadowColor="@color/SecondaryBase"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>